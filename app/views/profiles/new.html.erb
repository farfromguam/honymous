<h1>Your Profile</h1>

<%= form_for@profile do |f| %>
  <p>
    <%= f.label :name, "Your Name" %><br>
    <%= f.text_field :name, :size => 40 %>
  </p>
    <%= f.hidden_field :user_id, :value => current_user.id %>
  <p>
    <%= f.label :one_liner, "A one-liner to help people find you" %><br>
    <%= f.text_field :one_liner, :size => 40 %>
  </p>
  <p>
    <%= f.label :description, "What are you looking for feedback on?" %><br>
    <%= f.text_area :description, :cols => 35, :rows => 6 %>
  </p>
  <p>
    <%= f.check_box :public_profile %>
    <%= f.label :public_profile, "Make my profile public" %>
  </p>
  <p>
    <%= f.submit "Submit" %>
  </p>
<% end %>