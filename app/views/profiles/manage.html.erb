<div class="row">
  <div class="span3 text-right">
    <p>
      <%= image_tag avatar_url(current_user.email), :class => "img-polaroid" %>
    </p>
    <p>
      <a href="http://www.gravatar.com">Your Gravatar Image</a>
    </p>
    <p>
      <%= link_to "Edit Login Settings", edit_user_registration_path %>
    </p>
  </div>
  <div class="span5">

    <h1>Your profiles</h1>

    <% @user_profiles.each do |profile| %>
      <div class="well well-small">
        <h4>
          <%= profile.name %>
        </h4>
        <p>
          <%= profile.one_liner %>
        </p>
        <% if !profile.public_profile %>
          <p>
            This profile is private. To share, email this URL:<br>
            <%= profile_url(profile) %>
          </p>
        <% end %>
        <p>
          <%= link_to "Visit", profile_url(profile), :class => "btn btn-success"  %>
          <%= link_to "Edit", edit_profile_url(profile), :class => "btn btn-warning" %>
          <%= link_to "Delete", profile_url(profile), :method => :delete, :class => "btn btn-danger" %>
        </p>
      </div>
    <% end %>

    <%= link_to "New Profile", new_profile_path, :class => "btn" %>
  </div>
</div>
